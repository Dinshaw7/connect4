{
    "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "target": "ESNext",
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "./dist",
      "allowJs": true,
      "declaration": true,
      "strict": true,
      "types": [
        "reflect-metadata",
        "node",
        "mocha",
        "chai"
      ],
      "removeComments": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "resolveJsonModule": true
    },
    "lib": [
      "es2015"
    ],
    "include": [
      "src/**/*",
      "index.ts",
      "."
    ]
  }
  